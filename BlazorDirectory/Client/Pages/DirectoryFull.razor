@page "/DirectoryFull"
@using BlazorDirectory.Shared;
@inject HttpClient Http
@inject NavigationManager Navigation
<h3>Agenda llena</h3>

<EditForm Model="@_contact">
    <div class="form-group">
        <button type="submit" class="btn btn-success" @onclick="(() => DirectorysFull())">Directorio Lleno</button>
    </div>
</EditForm>

<div class="alert alert-secondary mt-4">
    <span class="oi oi-person me-2" aria-hidden="true"></span>
    <strong>Informaci√≥n del directorio telefonico</strong><br><br>

    <span class="text-nowrap">
        <p>Mensaje : @message</p>
    </span>
</div>

@code {
    private Contact _contact = new Contact();
    string message = "";
    private string name = "";

    private async Task DirectorysFull()
    {
        string info = await Http.GetStringAsync("https://localhost:7163/api/contact/directoryFull/");
        message = info;
    }
}